@model GustiPizza

<div class="container-fluid">
    <div class="row d-flex">
        <div class="col d-flex justify-content-center mb-5">
            <div class="card text-center border-warning mb-3" style="width: 20rem;">
                <img src="@Model.Image" class="card-img-top" alt="..." height="375px">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
                <div class="card-footer border-warning" style=" background-color:white;">
                    @Model.Price €
                </div>
            </div>
        </div>
    </div>
</div>